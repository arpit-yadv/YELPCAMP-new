<%- include('../partials/header') %>
<%- include('../partials/nav') %>
<%- include('../partials/flash') %>




<div class="container">
    <form class="needs-validation" action="/campgrounds/<%=campground._id%>?_method=PATCH" method="POST" novalidate enctype="multipart/form-data">
        <div class="form-group">
          <label for="trekTitle">Title of the Trek</label>
          <input class="form-control" name="campground[title]" id="trekTitle" aria-describedby="emailHelp" value="<%= campground.title%>" required>
        </div> 
        
        <div class="form-group">
         
          <label for="image">Add Images</label>
          <input  type="file" name="image"  id="image" required multiple>
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" name="campground[location]" value="<%= campground.location%>" id="location" required>
        </div>
        <div class="form-group">
          <label for="price">Price of the Trek Package</label>
          <input type="number" name="campground[price]" class="form-control" id="price" value="<%= campground.price%>" required>
        </div>
        <div class="form-group">
            <label for="description">Description of the Trek</label>
            <textarea  name="campground[description]" class="form-control" id="description" cols="30" rows="5" required><%= campground.description%></textarea>
        </div> 
        <div class="container">
          <%campground.images.forEach((image,i)=>{%>
            <div class="form-check d-inline">
              <label for="image-<%=i%>"></label>
            <img src="<%=image.thumbnail%>" id="image-<%=i%>" alt="">
            <input type="checkbox" name="deleteImages[]" value="<%=image.filename%>" id="">
            </div>       
          <%})%>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <a href="/campgrounds/<%=campground._id %>" class="btn btn-success my-2">Go Back</a>

</div>
















<%- include('../partials/footer') %>