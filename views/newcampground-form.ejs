<div class="container">
    <form class="needs-validatio  " action="/campgrounds" method="POST" novalidate enctype="multipart/form-data">
        <div class="form-group">
          <label for="trekTitle">Title of the Trek</label>
          <input class="form-control" name="campground[title]" id="trekTitle" aria-describedby="emailHelp" required>
        </div>
        <div class="form-group">
          <input type="file" name="image" id="" multiple>
          <!-- <label for="image">Image</label>
          <input class="form-control" name="campground[image]" id="image" required> -->
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" name="campground[location]" id="location" required>
        </div>
        <div class="form-group">
          <label for="price">Price of the Trek Package</label>
          <input type="text" name="campground[price]" class="form-control" id="price" required>
        </div>
        <div class="form-group">
            <label for="description">Description of the Trek</label>
            <input  name="campground[description]" class="form-control" id="campground[description]" cols="30" rows="3" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>










